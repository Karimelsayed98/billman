{
  "name": "billman",
  "version": "0.0.1",
  "description": "The bills manager everyone will ever need ðŸ¤‘.",
  "repository": "git@github.com:khaled-hamam/billman.git",
  "author": "Khaled Mohamed <khal3d.mohamed@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.tsx,.ts",
    "format": "prettier '{.,src/**}/*.{js,jsx,ts,tsx}' --write",
    "clean": "./scripts/clean.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "lerna run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run format",
      "npm run lint -- --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^3.0.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}
